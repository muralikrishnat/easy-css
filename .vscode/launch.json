    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Components Server",
            "program": "${workspaceFolder}/components-server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--port=7680",
                "--folder=components"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Theme Server",
            "program": "${workspaceFolder}/theme-server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--port=7677",
                "--folder=themes"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "args": [
                "--port=3434",
                "--folder=components"
            ]
        }
    ]
}